<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="500.0" prefWidth="709.0"
            styleClass="bodybg" stylesheets="@../Style/GameStyle1.css"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="screen.SingleUserNameController">
    <children>
        <BorderPane layoutX="9.0" layoutY="9.0" prefHeight="500.0" prefWidth="700.0">
            <center>
                <Pane prefHeight="511.0" prefWidth="714.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fitHeight="389.0" fitWidth="510.0" layoutX="99.0" layoutY="85.0" pickOnBounds="true">
                            <image>
                                <Image url="@../Style/fram%20(2).png"/>
                            </image>
                        </ImageView>
                        <Label layoutX="125.0" layoutY="110.0" prefHeight="41.0" prefWidth="194.0">
                            <font>
                                <Font name="Cambria Math" size="25.0"/>
                            </font>
                        </Label>
                        <RadioButton layoutX="229.0" layoutY="234.0" mnemonicParsing="false" prefHeight="54.0"
                                     prefWidth="114.0" selected="true" text="X" textFill="#290149" fx:id="x">
                            <font>
                                <Font name="Comic Sans MS Bold" size="25.0"/>
                            </font>
                            <toggleGroup>
                                <ToggleGroup fx:id="chx"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="o" layoutX="388.0" layoutY="234.0" mnemonicParsing="false" prefHeight="54.0"
                                     prefWidth="114.0" textFill="#f20606" toggleGroup="$chx">
                            <font>
                                <Font name="Broadway" size="25.0"/>
                            </font>
                        </RadioButton>
                        <RadioButton fx:id="easy" layoutX="229.0" layoutY="314.0" mnemonicParsing="false"
                                     prefHeight="54.0" prefWidth="114.0" selected="true" text="Easy" textFill="#290149">
                            <font>
                                <Font name="Comic Sans MS Bold" size="25.0"/>
                            </font>
                            <toggleGroup>
                                <ToggleGroup fx:id="level"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="hard" layoutX="388.0" layoutY="314.0" mnemonicParsing="false"
                                     prefHeight="54.0" prefWidth="114.0" text="hard" textFill="#290149"
                                     toggleGroup="$level">
                            <font>
                                <Font name="Comic Sans MS Bold" size="26.0"/>
                            </font>
                        </RadioButton>
                        <Button fx:id="SingleStart" layoutX="245.0" layoutY="388.0" mnemonicParsing="false"
                                onAction="#handleStartSinglePlayer" prefHeight="67.0" prefWidth="222.0"
                                style="-fx-background-color: #ffd880;" text="START" textFill="#290149">
                            <font>
                                <Font name="DODGE" size="35.0"/>
                            </font>
                        </Button>
                        <TextField fx:id="playerName" alignment="CENTER" focusTraversable="false" layoutX="172.0"
                                   layoutY="142.0" prefHeight="45.0" prefWidth="363.0" promptText="Enter Your Name">
                            <font>
                                <Font name="Comic Sans MS" size="18.0"/>
                            </font>
                        </TextField>
                        <Button fx:id="back_button" layoutX="14.0" layoutY="7.0" mnemonicParsing="false"
                                onAction="#back_btn" prefHeight="53.0" prefWidth="52.0">
                            <graphic>
                                <ImageView fitHeight="37.0" fitWidth="37.0" pickOnBounds="true">
                                    <image>
                                        <Image url="@../Style/previous.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <ImageView fitHeight="90.0" fitWidth="105.0" layoutX="302.0" layoutY="27.0" pickOnBounds="true">
                            <image>
                                <Image url="@../Style/avater2.png"/>
                            </image>
                        </ImageView>
                        <Label layoutX="241.0" layoutY="235.0" prefHeight="51.0" prefWidth="90.0" textFill="#290149"/>
                        <Label layoutX="430.0" layoutY="235.0" prefHeight="51.0" prefWidth="90.0" text="O"
                               textFill="#290149">
                            <font>
                                <Font name="Comic Sans MS Bold" size="25.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>

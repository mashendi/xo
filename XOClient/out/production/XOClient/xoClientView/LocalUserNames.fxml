<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="400.0" prefWidth="600.0"
            styleClass="bodybg" stylesheets="@../Style/GameStyle1.css"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="screen.LocalUserNamesController">
    <children>
        <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="500.0" prefWidth="700.0">
            <center>
                <Pane prefHeight="524.0" prefWidth="700.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fitHeight="251.0" fitWidth="277.0" layoutX="63.0" layoutY="137.0"
                                   pickOnBounds="true">
                            <image>
                                <Image url="@../Style/fram%20(2).png"/>
                            </image>
                        </ImageView>
                        <ImageView fitHeight="251.0" fitWidth="277.0" layoutX="383.0" layoutY="137.0"
                                   pickOnBounds="true">
                            <image>
                                <Image url="@../Style/fram%20(2).png"/>
                            </image>
                        </ImageView>
                        <Label prefHeight="69.0" prefWidth="68.0">
                            <font>
                                <Font name="Cambria Math" size="25.0"/>
                            </font>
                        </Label>
                        <Label>
                            <font>
                                <Font name="Cambria Math" size="25.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="player1" alignment="CENTER" focusTraversable="false" layoutX="100.0"
                                   layoutY="169.0" prefHeight="44.0" prefWidth="191.0" promptText="Player 1 Name">
                            <font>
                                <Font name="Comic Sans MS" size="18.0"/>
                            </font>
                        </TextField>
                        <TextField fx:id="player2" alignment="CENTER" focusTraversable="false" layoutX="429.0"
                                   layoutY="170.0" prefHeight="44.0" prefWidth="191.0" promptText="Player 2 Name">
                            <font>
                                <Font name="Comic Sans MS" size="18.0"/>
                            </font>
                        </TextField>
                        <Button fx:id="back_button" layoutX="4.0" layoutY="6.0" mnemonicParsing="false"
                                onAction="#back_btn" prefHeight="57.0" prefWidth="62.0">
                            <graphic>
                                <ImageView fitHeight="37.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../Style/previous.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="localStart" layoutX="244.0" layoutY="404.0" mnemonicParsing="false"
                                onAction="#handleLocalPlayersAction" prefHeight="60.0" prefWidth="215.0"
                                style="-fx-background-color: #ffd880;" text="START" textFill="#290149">
                            <font>
                                <Font name="DODGE" size="35.0"/>
                            </font>
                        </Button>
                        <RadioButton layoutX="115.0" layoutY="276.0" mnemonicParsing="false" onAction="#radioAction"
                                     prefHeight="36.0" prefWidth="88.0" selected="true" text="X" textFill="#290149"
                                     fx:id="x">
                            <toggleGroup>
                                <ToggleGroup fx:id="rad_x"/>
                            </toggleGroup>
                            <font>
                                <Font name="Comic Sans MS" size="27.0"/>
                            </font>
                        </RadioButton>
                        <RadioButton fx:id="o" layoutX="223.0" layoutY="276.0" mnemonicParsing="false"
                                     onAction="#radioAction" prefHeight="36.0" prefWidth="84.0" text="O"
                                     textFill="#290149" toggleGroup="$rad_x">
                            <font>
                                <Font name="HoloLens MDL2 Assets" size="27.0"/>
                            </font>
                        </RadioButton>
                        <Label fx:id="symbol2" alignment="CENTER" layoutX="432.0" layoutY="262.0" prefHeight="58.0"
                               prefWidth="193.0" textFill="#290149">
                            <font>
                                <Font name="28 Days Later" size="18.0"/>
                            </font>
                        </Label>
                        <ImageView fitHeight="85.0" fitWidth="104.0" layoutX="159.0" layoutY="62.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../Style/avater2.png"/>
                            </image>
                        </ImageView>
                        <ImageView fitHeight="85.0" fitWidth="104.0" layoutX="479.0" layoutY="62.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../Style/avatar.png"/>
                            </image>
                        </ImageView>
                    </children>
                </Pane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
